<Window x:Class="Labo_7___Polymorphism.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labo_7___Polymorphism"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Right">
            <Button Name="importButton" Content="Import" Width="100" Height="30" VerticalAlignment="Top" Margin="5" Click="ImportButton_Click"/>
            <Button Name="removeButton" IsEnabled="False" Content="Remove" Width="100" Height="30" VerticalAlignment="Top" Margin="5" Click="RemoveButton_Click"/>
            <Button Name="clearButton" IsEnabled="False" Content="Clear All" Width="100" Height="30" VerticalAlignment="Top" Margin="5" Click="ClearButton_Click"/>
            <Button Name="useButton" IsEnabled="False" Content="Use" Width="100" Height="30" VerticalAlignment="Top" Margin="5" Click="UseButton_Click"/>
            <Button Name="sortButton" IsEnabled="False" Content="Sort" Width="100" Height="30" VerticalAlignment="Top" Margin="5" Click="SortButton_Click"/>
            <Button Name="filterButton" IsEnabled="False" Content="Filter" Width="100" Height="30" VerticalAlignment="Top" Margin="5" Click="FilterButton_Click"/>
        </StackPanel>
        <TextBox DockPanel.Dock="Top" Name="inputTextBox" Width="200" Height="30" VerticalAlignment="Top" Margin="10"/>
        <ListBox Name="itemsListBox" Margin="10" SelectionChanged="itemsListBox_SelectionChanged" />
    </DockPanel>
</Window>
